<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="org.vikulin.smarttouchwallet.MainActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/changer_menu"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="6"
        android:orientation="vertical">


        <LinearLayout android:tag="btc"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:onClick="onClick">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/btc"
                 />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btc"
                android:fontFamily="sans-serif"
                android:text="Bitcoin"
                android:textColor="@color/primary_text"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                android:textAllCaps="false"
                android:textSize="20dp">
            </TextView>
        </LinearLayout>

        <LinearLayout android:tag="eth"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"

            android:gravity="center_vertical"
            android:clickable="true"
            android:onClick="onClick">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ether"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ether"
                android:fontFamily="sans-serif"
                android:text="Ethereum"
                android:textColor="@color/primary_text"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                android:textAllCaps="false"
                android:textSize="20dp">
            </TextView>
        </LinearLayout>

        <LinearLayout android:tag="dash"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"

            android:gravity="center_vertical"
            android:clickable="true"
            android:onClick="onClick">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:src="@drawable/dash"
                android:scaleType="fitCenter" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/dash"
                android:fontFamily="sans-serif"
                android:text="Dash"
                android:textColor="@color/primary_text"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                android:textAllCaps="false"
                android:textSize="20dp">
            </TextView>
        </LinearLayout>
        <LinearLayout android:tag="zec"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"

            android:gravity="center_vertical"
            android:clickable="true"
            android:onClick="onClick">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:src="@drawable/zcash"
                android:scaleType="fitCenter"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/zcash"
                android:fontFamily="sans-serif"
                android:text="Zcash"
                android:textColor="@color/primary_text"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                android:textAllCaps="false"
                android:textSize="20dp">
            </TextView>
        </LinearLayout>
        <LinearLayout android:tag="etc"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"

            android:gravity="center_vertical"
            android:clickable="true"
            android:onClick="onClick">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:src="@drawable/ec"
                android:scaleType="fitCenter"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/ec"
                android:fontFamily="sans-serif"
                android:text="Ether Classic"
                android:textColor="@color/primary_text"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                android:textAllCaps="false"
                android:textSize="20dp">
            </TextView>
        </LinearLayout>
        <LinearLayout android:tag="ltc"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"

            android:gravity="center_vertical"
            android:clickable="true"
            android:onClick="onClick">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:src="@drawable/litecoin"
                android:scaleType="fitCenter" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/litecoin"
                android:fontFamily="sans-serif"
                android:text="Litecoin"
                android:textColor="@color/primary_text"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                android:textAllCaps="false"
                android:textSize="20dp">
            </TextView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>