<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="org.vikulin.smarttouchwallet.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:background="@drawable/side_nav_bar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/logo"
                android:onClick="onClickExchange"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Smart Touch"
                android:textSize="30dp"
                android:textColor="@color/colorPrice"
                android:layout_gravity="center"/>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout android:id="@+id/balance"
        android:layout_below="@id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/bg">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:text="9.368$"
            android:paddingTop="30dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrice"/>
        <LinearLayout android:id="@+id/otherBalance"
            android:layout_below="@id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:background="@android:color/transparent"
            android:layout_weight="9"
            android:paddingTop="5dp">

            <ImageButton android:id="@+id/show_left"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:scaleType="fitEnd"
                android:src="@drawable/arrow_left"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="0.23 BTC"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:textAlignment="center"
                android:textColor="@color/colorPrice"
                android:background="@drawable/rounded_bg"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"/>
            <ImageButton android:id="@+id/show_right"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:scaleType="fitStart"
                android:src="@drawable/arrow_right"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:id="@+id/add_wallet"
       android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/buyBackgroundColor"
        android:layout_weight="9"
        android:layout_alignParentRight="true"
        android:layout_below="@id/balance"
        android:gravity="center_vertical"
        android:layout_marginTop="-10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="My wallets"
            android:layout_margin="@dimen/fab_margin"
            android:layout_gravity="left|center_vertical"
            android:textAlignment="gravity"
            android:textColor="@color/colorPrice"
            android:background="@android:color/transparent"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            />
        <ImageButton android:id="@+id/add_wallet_button"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/plus"
            android:onClick="addWallet"/>
    </LinearLayout>
    <View
        android:id="@+id/delimiter1"
        android:layout_below="@id/add_wallet"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDelimiter" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/delimiter1"
        android:orientation="vertical"
        android:weightSum="12">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:background="@color/buyBackgroundColor">
            <ExpandableListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/account_list"
                />
        </LinearLayout>
        <View
            android:id="@+id/delimiter"
            android:layout_below="@id/add_wallet"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorDelimiter" />
        <LinearLayout android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="20"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_weight="2"
            android:background="@color/colorDelimiter"
            android:layout_gravity="center">
            <ImageButton
                android:id="@+id/imageButtonHome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:padding="10dp"
                android:src="@drawable/button_home"
                android:scaleType="fitCenter"
                />
            <ImageButton
                android:id="@+id/imageButtonFunds"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:padding="10dp"
                android:src="@drawable/button_funds"
                android:scaleType="fitCenter"
                android:layout_gravity="center_vertical"/>
            <ImageButton
                android:id="@+id/imageButtonPay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:padding="10dp"
                android:src="@drawable/button_pay"
                android:scaleType="centerInside"
                android:layout_gravity="center_vertical"/>
            <ImageButton
                android:id="@+id/imageButtonExchange"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:padding="10dp"
                android:src="@drawable/button_exchange"
                android:scaleType="centerInside"
                android:layout_gravity="center_vertical"/>
            <ImageButton
                android:id="@+id/imageButtonSettings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:padding="10dp"
                android:src="@drawable/button_settings"
                android:scaleType="centerInside"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
